<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            stylesheets="@Main.css"
            fx:controller="proj7ZhouRinkerSahChistolini.Controllers.Controller">
    <top>
        <MenuBar>
            <fx:include source="fileMenu.fxml"/>
            <fx:include fx:id="editMenu"
                        source="editMenu.fxml"/>
            <Menu text="Action">
                <MenuItem fx:id="startButton"
                          text="Play"
                          onAction="#playComposition"
                          accelerator="Shortcut+P"/>
                <MenuItem fx:id="stopButton"
                          text="Stop"
                          onAction="#stopComposition"
                          accelerator="Shortcut+S"/>
            </Menu>
        </MenuBar>
    </top>
    <left>
        <fx:include fx:id="instrumentPane"
                    source="instrumentPanel.fxml"/>
    </left>
    <center>
        <fx:include fx:id="compositionPanel"
                    source="compositionPanel.fxml"/>
    </center>

</BorderPane>